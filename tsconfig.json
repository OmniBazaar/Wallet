{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/core/*": [
        "src/core/*"
      ],
      "@/background/*": [
        "src/background/*"
      ],
      "@/content/*": [
        "src/content/*"
      ],
      "@/popup/*": [
        "src/popup/*"
      ],
      "@/omnibazaar/*": [
        "src/omnibazaar/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/utils/*": [
        "src/core/utils/*"
      ],
      "@/stores/*": [
        "src/stores/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/core/**/*.ts",
    "src/background/**/*.ts",
    "src/content/**/*.ts",
    "src/popup/**/*.ts",
    "src/types/**/*.ts",
    "src/utils/**/*.ts",
    "scripts/**/*.ts",
    "src/hooks/**/*.ts",
    "src/services/**/*.ts",
    "src/stores/**/*.ts",
    "src/examples/**/*.ts",
    "src/pages/**/*.tsx",
    "src/ui/**/*.tsx",
    "src/ui/**/*.d.ts",
    "manifest/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "source-repos",
    "DePay",
    "tests"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
