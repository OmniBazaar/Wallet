{
  "manifest_version": 2,
  "name": "OmniBazaar Wallet",
  "version": "1.0.0",
  "description": "Multi-chain privacy wallet with NFT marketplace integration for OmniBazaar",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "tabs",
    "notifications",
    "alarms",
    "webRequest",
    "https://*/*",
    "http://localhost:*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "OmniBazaar Wallet",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "web_accessible_resources": [
    "assets/*",
    "chunks/*"
  ],
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
  "options_ui": {
    "page": "popup.html#/settings",
    "open_in_tab": true
  },
  "homepage_url": "https://omnibazaar.com",
  "author": "OmniBazaar Team",
  "applications": {
    "gecko": {
      "id": "wallet@omnibazaar.com",
      "strict_min_version": "109.0"
    }
  }
} 