{
  "manifest_version": 3,
  "name": "OmniBazaar Wallet",
  "version": "1.0.0",
  "description": "Multi-chain privacy wallet with NFT marketplace integration for OmniBazaar",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "tabs",
    "notifications",
    "alarms",
    "webRequest"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost:*/"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OmniBazaar Wallet",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "chunks/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "options_page": "popup.html#/settings",
  "homepage_url": "https://omnibazaar.com",
  "author": "OmniBazaar Team"
} 